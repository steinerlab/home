---
import Layout from '../../layouts/Layout.astro'

const title = "HiFlOWS Project"
---

<Layout title={title}>
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="prose prose-lg dark:prose-invert max-w-none lg:col-span-3">
            <h1 class="text-4xl font-bold mb-8">{title}</h1>
            
            <section class="mb-12">
            <h2 class="text-2xl font-bold mb-4">Overview</h2>
            <p>
                Insert description here
            </p>
        </section>

        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-4">Key Features</h2>
            <ul>
                <li>Feature 1</li>
                <li>Feature 2</li>
                <li>Feature 3</li>
                <li>Feature 4</li>
            </ul>
        </section>

        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-4">Research Focus</h2>
            <p>
                Our research concentrates on ....
            </p>
        </section>

        <section class="mb-12">
            <h2 class="text-2xl font-bold mb-4">Applications</h2>
            <ul>
                <li>App 1</li>
                <li>App 2</li>
                <li>App 3</li>
                <li>App 4</li>
            </ul>
        </section>
        </div>

        <!-- Right Column -->
        <div class="lg:col-span-1">
            <div class="sticky top-8">
                <div class="bg-base-200 rounded-lg p-6">
                    <h3 class="text-lg font-bold mb-4">Apps</h3>
                    <div class="space-y-3">
                        <a 
                            href="https://hiflows-tasking.netlify.app/" 
                            target="_blank" 
                            rel="noopener noreferrer" 
                            class="bg-primary hover:bg-primary-focus text-primary-content no-underline rounded-lg p-3 shadow-lg transition-all hover:shadow-xl hover:-translate-y-0.5 flex items-center gap-3 w-full"
                        >
                            <svg 
                                xmlns="http://www.w3.org/2000/svg" 
                                width="24" 
                                height="24" 
                                viewBox="0 0 24 24" 
                                fill="none" 
                                stroke="currentColor" 
                                stroke-width="2" 
                                stroke-linecap="round" 
                                stroke-linejoin="round" 
                                class="size-5"
                            >
                                <path d="M3.5 18v-6a2 2 0 012-2h.028"></path>
                                <rect x="8" y="10" width="13" height="8" rx="2"></rect>
                                <path d="M15 14v0"></path>
                            </svg>
                            Tasking
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
