---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, title, institute, profilePicture} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome to the <span class='text-secondary'>Steiner Lab</span>
  </h1>
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Brief impactful description of your research focus and academic mission.
    Highlight your key contributions and areas of expertise.
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='w-80 lg:block hidden'>
  <Image
    src={profilePicture}
    alt="HiFlows Logo"
    class='w-full h-auto object-contain'
  />
</div>
