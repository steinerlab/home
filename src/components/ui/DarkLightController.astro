---
import {template} from  '../../settings.ts'
---

<label class="grid cursor-pointer place-items-center" transition:persist>
  <input
    id="theme-toggle"
    type="checkbox"
    class="toggle theme-controller bg-base-content col-span-2 col-start-1 row-start-1"
    aria-label="Toggle dark/light mode"
  />
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
      const checkbox = document.getElementById('theme-toggle');
      const html = document.documentElement;
      const darkTheme = "/*@__PURE__*/" + "${template.darkTheme}";
      const lightTheme = "/*@__PURE__*/" + "${template.lightTheme}";
      if (checkbox && html) {
        const inputEl = checkbox instanceof HTMLInputElement ? checkbox : null;
        if (!inputEl) return;
        // Set initial state based on current theme
        inputEl.checked = html.getAttribute('data-theme') === darkTheme;
        inputEl.addEventListener('change', function () {
          if (inputEl.checked) {
            html.setAttribute('data-theme', darkTheme);
            localStorage.setItem('theme', darkTheme);
          } else {
            html.setAttribute('data-theme', lightTheme);
            localStorage.setItem('theme', lightTheme);
          }
        });
        // Persist theme from localStorage
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          html.setAttribute('data-theme', savedTheme);
          inputEl.checked = savedTheme === darkTheme;
        }
      }
    });
  </script>
  <svg
    class="stroke-base-100 fill-base-100 col-start-1 row-start-1"
    xmlns="http://www.w3.org/2000/svg"
    width="14"
    height="14"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round">
    <circle cx="12" cy="12" r="5" />
    <path
      d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
  </svg>
  <svg
    class="stroke-base-100 fill-base-100 col-start-2 row-start-1"
    xmlns="http://www.w3.org/2000/svg"
    width="14"
    height="14"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</label>
